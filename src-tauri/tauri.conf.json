{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "code-notify",
  "version": "0.1.0",
  "identifier": "com.code-notify.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "window": {
      "all": true
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": []
    },
    "windows": [
      {
        "title": "code-notify",
        "width": 100,
        "height": 100,
        "label": "main",
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "theme": "Dark",
        "shadow": false,
        "alwaysOnTop": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
